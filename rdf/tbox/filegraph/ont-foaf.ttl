@prefix d: <http://vivo.brown.edu/individual/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix ns1: <http://www.w3.org/2008/05/skos#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix vitro: <http://vitro.mannlib.cornell.edu/ns/vitro/0.7#> .
@prefix vitrorole: <http://vitro.mannlib.cornell.edu/ns/vitro/role#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

foaf: a owl:Ontology ;
    rdfs:label "FOAF"@en-US ;
    vitro:ontologyPrefixAnnot "foaf"^^xsd:string .

foaf:Organization a owl:Class ;
    rdfs:label "Organization"@en-US ;
    vitro:customDisplayViewAnnot "individual--foaf-organization.ftl"^^xsd:string ;
    vitro:descriptionAnnot "This class will display all the instances in the subclasses below it, as well as any organizations that were added as part of this generic class because there wasn't a specific class available."^^xsd:string ;
    vitro:displayLimitAnnot "-1"^^xsd:int ;
    vitro:displayRankAnnot "-1"^^xsd:int ;
    vitro:exampleAnnot "Only use if no specific subclasses of foaf:organization desribe the organization."^^xsd:string ;
    vitro:hiddenFromDisplayBelowRoleLevelAnnot vitrorole:public ;
    vitro:inClassGroup d:vitroClassGrouporganizations ;
    vitro:prohibitedFromUpdateBelowRoleLevelAnnot vitrorole:public ;
    vitro:shortDef "A generic class encompassing several types of organizations."^^xsd:string ;
    rdfs:subClassOf foaf:Agent ;
    ns1:scopeNote "Ued to describe an organization related to bibliographic items such as a publishing company, etc."@en .

foaf:firstName a owl:DatatypeProperty,
        owl:FunctionalProperty ;
    rdfs:label "first name"@en-US ;
    vitro:descriptionAnnot "http://xmlns.com/foaf/spec/#term_firstName.  Note from foaf: \"The lastName  property is provided (alongside firstName) as a mechanism to support legacy data that cannot be easily interpreted in terms of the (otherwise preferred) familyName  and givenName  properties. The concepts of 'first' and 'last' names do not work well across cultural and linguistic boundaries; however they are widely used in addressbooks and databases.\""^^xsd:string ;
    vitro:displayLimitAnnot "1"^^xsd:int ;
    vitro:displayRankAnnot "10"^^xsd:int ;
    vitro:hiddenFromDisplayBelowRoleLevelAnnot vitrorole:public ;
    vitro:inPropertyGroupAnnot d:vitroPropertyGroupaddress ;
    vitro:prohibitedFromUpdateBelowRoleLevelAnnot vitrorole:editor ;
    vitro:publicDescriptionAnnot "The legal first name of a person as indicated in data loaded most likely from their institution.  Only 1 first name can be displayed for each individual."^^xsd:string ;
    rdfs:domain foaf:Person .

foaf:lastName a owl:DatatypeProperty,
        owl:FunctionalProperty ;
    rdfs:label "last name"@en-US ;
    vitro:descriptionAnnot "http://xmlns.com/foaf/spec/#term_lastName. Note from foaf: \"The lastName  property is provided (alongside firstName) as a mechanism to support legacy data that cannot be easily interpreted in terms of the (otherwise preferred) familyName  and givenName  properties. The concepts of 'first' and 'last' names do not work well across cultural and linguistic boundaries; however they are widely used in addressbooks and databases.\""^^xsd:string ;
    vitro:displayLimitAnnot "1"^^xsd:int ;
    vitro:displayRankAnnot "30"^^xsd:int ;
    vitro:hiddenFromDisplayBelowRoleLevelAnnot vitrorole:public ;
    vitro:inPropertyGroupAnnot d:vitroPropertyGroupaddress ;
    vitro:prohibitedFromUpdateBelowRoleLevelAnnot vitrorole:editor ;
    vitro:publicDescriptionAnnot "The legal last name of a person as indicated in data loaded most likely from their institution. Only 1 last name can be displayed for each individual."^^xsd:string ;
    rdfs:domain foaf:Person .

foaf:Agent a owl:Class ;
    rdfs:label "Agent"@en-US ;
    vitro:descriptionAnnot "see: http://xmlns.com/foaf/spec/#term_Agent"^^xsd:string ;
    vitro:displayLimitAnnot "-1"^^xsd:int ;
    vitro:displayRankAnnot "-1"^^xsd:int ;
    vitro:hiddenFromDisplayBelowRoleLevelAnnot vitrorole:public ;
    vitro:prohibitedFromUpdateBelowRoleLevelAnnot vitrorole:public ;
    vitro:shortDef "Agents are things that do stuff"^^xsd:string ;
    ns1:scopeNote "Used to describe any \"agent\" related to bibliographic items. Such agents can be persons, organizations or groups of any kind."@en .

foaf:Person a owl:Class ;
    rdfs:label "Person"@en-US ;
    vitro:customDisplayViewAnnot "individual--foaf-person.ftl"^^xsd:string ;
    vitro:displayLimitAnnot "-1"^^xsd:int ;
    vitro:displayRankAnnot "-1"^^xsd:int ;
    vitro:hiddenFromDisplayBelowRoleLevelAnnot vitrorole:public ;
    vitro:inClassGroup d:vitroClassGrouppeople ;
    vitro:prohibitedFromUpdateBelowRoleLevelAnnot vitrorole:public ;
    vitro:shortDef "The most general classification of a person"^^xsd:string ;
    rdfs:subClassOf foaf:Agent .

